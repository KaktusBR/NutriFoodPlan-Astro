---
import TopHeader from '../components/global/TopHeader.astro';
import Menu from '../components/global/Menu.astro';
import i18next, { t } from "i18next";

import Promoboxes from '../components/Promoboxes.astro';
import Footer from '../components/global/Footer.astro';

export interface Props {
  title: string;
}
const { frontmatter } = Astro.props;
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang={i18next.language}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" id="jet-menu-astra-css" href="./css/styles.css" media="all">
    <title>{title}</title>
  </head>
  <body>
    <div class="flex flex-col w-full">
	  <TopHeader />
    <Menu />
    <slot />
    <Footer />
    </div>
  </body>
</html>
